<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.chart.ScatterChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dto.gui.BatchPlotController" spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <HBox spacing="10" alignment="CENTER_LEFT">
        <ComboBox fx:id="descriptorCombo" promptText="Select Xâ€‘axis descriptor" prefWidth="200"/>
        <Button text="Load Data" onAction="#loadData"/>
    </HBox>
    <!-- Scatter chart -->
    <ScatterChart fx:id="scatterChart" title="Regression Scatter Plot" animated="false" VBox.vgrow="ALWAYS">
        <xAxis>
            <NumberAxis fx:id="xAxis" label="Descriptor" />
        </xAxis>
        <yAxis>
            <NumberAxis fx:id="yAxis" label="Toxicity Probability" />
        </yAxis>
    </ScatterChart>
</VBox>
